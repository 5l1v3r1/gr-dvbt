<?xml version="1.0"?>
<block>
  <name>reed_solomon</name>
  <key>dvbt_reed_solomon</key>
  <category>dvbt</category>
  <import>import dvbt</import>
  <make>dvbt.reed_solomon()</make>
  <param>
    <name>Input length</name>
    <key>ninput</key>
    <value>1512</value>
    <type>int</type>
  </param>
  <param>
    <name>Output length</name>
    <key>noutput</key>
    <value>1512</value>
    <type>int</type>
  </param>
  <check>$ninput &gt; 0</check>
  <check>$noutput &gt; 0</check>
  <check>$noutput &gt;= $ninput</check>
  <sink>
    <name>in</name>
    <type>byte</type>
    <vlen>$ninput</vlen>
  </sink>
  <source>
    <name>out</name>
    <type>byte</type>
    <vlen>$noutput</vlen>
  </source>
</block>
